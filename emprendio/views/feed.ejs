<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %> 
    <link rel="stylesheet" href="/stylesheets/feed.css">

    
<body>

    <% if (usuario != undefined) { %>  
        <%- include('./partials/headerLogueado') %>
    <% } else { %>    
         <%- include('./partials/header')   %> 
    <% } %> 

        <!--  Nota: Joaquin*Tengo que conectar el producto con el nombre del emprendedor -->
    <main>



        <div class="uk-section uk-section-small"> 

            <div class="uk-container uk-container-large uk-flex">
                <section id="posts" class="uk-flex uk-flex-middle uk-flex-center uk-flex-column uk-child-width-1-2 uk-width-1-1">

                    <!-- PRODUCTOS -->

                    <% for( let i = 0; i < productos.length; i++ ) { %>


                        <article class="post uk-card-default uk-flex uk-flex-column">
                            
                            <!--info emprendimiento-->
                            <a href='/emprendedores/emprendedor/<%=productos[i].usuarioProducto.id%>'>
                            <div class="info-usuario uk-flex ">
                                <div>
                                    <img src="https://previews.123rf.com/images/amitspro/amitspro1706/amitspro170600016/80099376-mandala-de-flor-abstracta-patr%C3%B3n-decorativo-fondo-azul-imagen-cuadrada-imagen-de-ilusi%C3%B3n-patr%C3%B3n-fondo-photo.jpg" alt="">
                                </div>
                                <h4 class="h3emprendio"> <%= productos[i].usuarioProducto.Nombre %> </h4>
                            </div>
                        </a>
                            <!-- </a> -->

                            <!-- imagen-->
                            <div class="post-body uk-flex uk-flex-center">
                                <img src="<%=productos[i].foto%>"  alt="" class="foto de perfil fotoproducto">
                            </div>

                            <!-- reacciones-->
                            <div class="post-reacciones">
                                <ul class="post-icons uk-flex ">
                                    <div class="uk-navbar-left">
                                        <li><span class="" uk-icon="icon:heart; ratio: 1.3"></span></li>
                                        <li><span class="" uk-icon="icon:forward; ratio: 1.3"></span></li>
                                    </div>
                                    <div class="uk-navbar-right">
                                        <h3 class="h3emprendio precio"> $ <%=productos[i].precio %> </h3>
                                        <button class="botonemprendio textobotonemprendio">
                                            <span class="uk-margin-small-right uk-icon" uk-icon="icon: cart"></span>
                                            Comprar
                                        </button>
                                    </div>
                                </ul>                 
                            </div>


                            <!-- Descripcion-->
                            <div class="post-comentarios">
                                <h4 class="h4emprendio">Descripcion</h4>
                                <p class="pemprendio"><%=productos[i].descripcion%></p>
                            </div>

                            <!-- comentarios-->
                            <div class="post-comentarios">
                                <h4 class="h4emprendio">Comentarios</h6>
                                <ul>
                                    <!-- For [i] comentarios-->
                                    <% for( let k = 0; k < productos[i].preguntaProducto.length; k++ ) { %>
                                    <li>
                                        <p> <a href='/emprendedores/emprendedor/<%=productos[i].preguntaProducto[k].usuarioPregunta.id%>'> <%=productos[i].preguntaProducto[k].usuarioPregunta.Nombre %> </a></p>
                                        <p> <%=productos[i].preguntaProducto[k].pregunta %> </p>
                                    </li>
                                    <% } %>

                                </ul>
                                <form action="/productos/comentario" class="uk-text-left" method="POST">  
                                    <input type="text" class="uk-input" placeholder="Escribe tu comentario" name="comentario"> 
                                    <input type="hidden" value="<%=productos[i].id%>" name="idDelDetalle">
                                    <div>
                                        <button class="botonemprendiocreate textobotonemprendio"  type="submit">
                                            <span class="uk-margin-small-right uk-icon" uk-icon="icon: comment"></span>
                                            Agregar comentario
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <!-- FIN DEL PRODUCTO-->
                        </article>
                    <% } %>

                </section>

            </div>
        </div>
    </main>

    <%- include('./partials/footer') %> 

</body>

</html>