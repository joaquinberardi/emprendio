<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %> 
    <link rel="stylesheet" href="/stylesheets/productos.css">    
</head>

<body>
    <%- include('./partials/header') %> 
    <h1>PRODUCTOS</h1>
    <main>
        <div class="uk-section uk-section-small">
            <div class="uk-container uk-container-small">
               <section class="muro uk-flex uk-flex-middle uk-flex-center">
                    <div class="uk-grid uk-child-width-1-3 uk-width-1-1 uk-margin-remove" uk-grid>

                        <% for( let i = 0; i < productos.length; i++ ) { %>
                            <div class="uk-card uk-card-hover uk-card-body uk-flex uk-flex-column uk-flex-middle uk-flex-center ">
                                <a href='/productos/detalle/<%=productos[i].id%>' class="link-detalle">
                                    <img src="<%=productos[i].foto%>" alt="foto de perfil" class="foto-perfil">
                                    <p class="uk-text-center"><%=productos[i].nombre%></p>
                                </a>
                            </div>
                        <% } %>
                        
                    
                    </div>
               </section>
            </div>
        </div>
    </main>


    <%- include('./partials/footer') %> 

</body>

</html>