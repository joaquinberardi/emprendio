<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %> 
    <link rel="stylesheet" href="/stylesheets/detallePost.css">
    <script src="/javiscript/pedidos.js"></script>
    <script src="/javiscript/carrito.js"></script>
</head>
<body>
    <% if (usuario != undefined) { %>  
        <%- include('./partials/headerLogueado') %>
    <% } else { %>    
         <%- include('./partials/header')   %> 
    <% } %>  
    
    <main>
        <!-- Producto -->
        <div class="uk-section uk-section-xsmall ">
            <div class="uk-container uk-container-large detalleproducto ">
                <!-- Detalle del producto-->
                <div class= "card-producto uk-height-large uk-container uk-container-large uk-flex uk-flex-middle uk-flex-center producto 3">        
                    <section class=" uk-height-large uk-flex uk-width-2-3 detalle-container">
                        <!-- Imagen-->
                        <article class="uk-width-2-3 uk-flex uk-flex-center uk-flex-middle imagen-post">
                            <img src="<%=detalle.foto%>" alt="Imagen del post" class="fotoproductodetalle">
                        </article>

                        <!-- Detalle-->
                        <article class="uk-width-1-3 uk-flex uk-flex-column detalle-post">
                            <div class="uk-flex uk-flex-middle ">
                                
                                <%=detalle.usuarioProducto.NombreUsuario%>
                           
                                <img class="fotousuario" src="<%=detalle.usuarioProducto.Foto%>" alt="Foto del usuario">
                            </div>
                            <div class="info-post uk-flex uk-flex-middle">
                                <h2 class="nombreproducto h2emprendio"> <%=detalle.nombre%> </h2>
                            </div>
                            <div class="">
                                <h3 class="h3emprendio"> Descripcion:</h3>
                                <p class="descripcionproducto"><%=detalle.descripcion%></p>
                            </div>
                            <div class="info-post uk-flex uk-flex-middle">
                                <p class="ubicacion"> Ubicación: <%=detalle.ubicacion%></p>
                            </div>
                            <div class="info-post uk-flex uk-flex-middle">
                                <p class="colores"> Colores: <%=detalle.colores%></p>
                            </div>
                            <div class="info-post uk-flex uk-flex-middle">
                                <p class="personalizacion"> Personalización: <%=detalle.personalizacion%></p>
                            </div>
                            <div class="info-post uk-flex uk-flex-middle">
                                <p class="stock"> Stock: <%=detalle.stock%></p>
                            </div>
                            <div class=" ">
                                <h2 class="h2emprendio"> Precio: $ <%=detalle.precio%> </h2>
                            </div>
                            <div>
                            <a href= "/emprendedores/editarProductos/<%= detalle.id %>">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="vemo" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                </svg>
                            </div>
                            <div>
                                <a href="/productos/agregarCarrito/<%= detalle.id %>">
                                <button class="botonhero botonemprendio textobotonemprendio agregar-carrito">Agregar al Carrito</button>
                                </a>
                            </div>
                           
                        </article>
                    </section>
                </div>
                <!-- Comentarios-->
            <section class="comentarios">
                
                <div class="comentarios-producto uk-container uk-container-large uk-flex uk-flex-middle uk-flex-center">
                    <section class="uk-flex uk-width-1-2 detalle-container">
                        <article class="lista-comentarios" >
                                <% for( let i = 0; i < detalle.preguntaProducto.length; i++ ) { %>
                                    <div class="comentario uk-flex uk-flex-middle uk-margin-small-top">
                                        <h6 class="uk-margin-remove uk-width-2-4"><a href=""> <%= detalle.preguntaProducto[i].usuarioPregunta.Nombre%></a> <%=detalle.preguntaProducto[i].pregunta %></h6>
                                        <a href="" uk-icon="icon:heart; ratio: 0.8" class="uk-width-1-4 uk-text-right icono-meGusta"></a>
                                    </div>
                                <% } %>
                        <div class="opcionesenvio">
                            <div class="info-post uk-flex uk-flex-middle">
                                <p class="pago"> Opciones de envio: <%=detalle.opciones_envio %></h3>
                            </div>
                            <div class="info-post uk-flex uk-flex-middle">
                                <p class="pago"> Opciones de pago: <%=detalle.opciones_pago%></p>
                            </div>
                        </div>
                
                        </article>
                        
                    </section>
                </div>
                <div class= "uk-container uk-container-large uk-flex">   
                    <article class="agregarcomentario uk-flex uk-width-1-2 detalle-container">
                        <form action="/productos/comentario" class="uk-text-left" method="POST">  
                        <input type="text" class="uk-input" placeholder="Agregar comentario" name="comentario"> 
                        <input type="hidden" value="<%=detalle.id%>" name="idDelDetalle">
                        <div>
                            <button class="botonhero botonemprendiocreate textobotonemprendio"  type="submit" >Comentar</button>
                        </div>
                    </form>
                    </article>
                </div>
            </section>
            </div>
        </div>

    </main>

    <%- include('./partials/footer') %> 


</body>

</html>